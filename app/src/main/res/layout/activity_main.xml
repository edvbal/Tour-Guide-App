<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/parentMainActivity"
    tools:context="com.example.android.project6.MainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/menuTabs"
        style="@style/tabLayoutMainActivity"
        app:tabIndicatorColor="@color/background"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/tab_selected"
        app:tabTextColor="@android:color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/menuPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
